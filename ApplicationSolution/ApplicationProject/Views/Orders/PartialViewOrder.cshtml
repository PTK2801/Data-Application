@model ApplicationProject.Models.ApplicationDTO



<div class="modal fade" id="createOrder" role="dialog" style="width:100%">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="createOrderlabel">Order</h4>
                <button type="button" class="close btn btn-primary" data-bs-dismiss="modal" style="background-color:rgb(255, 0, 0);font-size:18px;color:white;font-weight:600">x</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h5>Create a Order</h5>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.OrderModel.OrderNumber, htmlAttributes: new { @class = "control-label col-md-2", style = " width:100%" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.OrderModel.OrderNumber, new { htmlAttributes = new { @class = "form-control", style = " border:2px solid grey" } })
                            @Html.ValidationMessageFor(model => model.OrderModel.OrderNumber, "The Order Number field is required", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.OrderModel.OrderDate, htmlAttributes: new { @class = "control-label col-md-2", style = " width:100%" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.OrderModel.OrderDate, new { htmlAttributes = new { @class = "form-control", style = " border:2px solid grey" } })
                            @Html.ValidationMessageFor(model => model.OrderModel.OrderDate, "The Order Date field is required", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.OrderModel.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.OrderModel.Status, new List<SelectListItem> { new SelectListItem { Text = "Ready", Value = "Ready" }, { new SelectListItem { Text = "In Progress", Value = "In Progress" } } }, optionLabel: "Select status", htmlAttributes: new { @class = "form-control", style = " border:2px solid grey" })
                            @Html.ValidationMessageFor(model => model.OrderModel.Status, "The Status field is required", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.OrderModel.ClientId, "Client Name", htmlAttributes: new { @class = "control-label col-md-2", style = " width:100%" })
                        <div class="col-md-10" id="Name">
                            @Html.DropDownListFor(model => model.OrderModel.ClientId, new SelectList(ViewBag.ClientId), optionLabel: "Select Client name", htmlAttributes: new { @class = "form-control", style = " border:2px solid grey" })
                            @Html.ValidationMessageFor(model => model.OrderModel.ClientId, "The Client Name field is required", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    
                    
                    </div>
                    
                
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" style="background-color:limegreen;color:white">Create</button>
                  
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="btnCancel" style="background-color:dodgerblue">Cancel</button>
                </div>
                }

            </div>
        </div>

    </div>
</div>


