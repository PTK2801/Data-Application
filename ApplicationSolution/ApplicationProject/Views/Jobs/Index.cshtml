@model IEnumerable<ApplicationProject.Models.Job>

@{
    ViewBag.Title = "Jobs";
}

<h2>Jobs</h2>

<p>
    @Html.ActionLink("Create a Job", "Create", "", new { @class = "btn btn-default blueColor" })
</p>

@if (Model.Count() == 0)
{
    <h4>No Jobs found.</h4>
}
else
{
<table style="width:80%">
    <tr style="border-bottom:1px solid black">
        <th>
            @Html.DisplayNameFor(model => model.JobId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayName("Order Number")
        </th>
        <th></th>
    </tr>

  @foreach (var item in Model)
  {
    <tr class="row2 theRow" style="border-bottom:1px solid black">
        <td>
            @Html.DisplayFor(modelItem => item.JobId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.OrderNumber)
        </td>
        <td style="padding-top:3%;padding-bottom:3%;display:none">
            @Html.ActionLink("Edit", "Edit", new { id = item.JobId }, new { @class = "btn btn-default orangeColor" }) |
            @Html.ActionLink("Details", "Details", new { id = item.JobId }, new { @class = "btn btn-default blueColor" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.JobId }, new { @class = "btn btn-default redColor" })
        </td>
        <td style="padding-top:0.5%;padding-bottom:3%;cursor:pointer;font-size:300%">
            ...
        </td>
    </tr>
  }
</table>
}
